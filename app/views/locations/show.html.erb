<div class="location_show" style="background-image:url('<%= @location.img_url %>')">
	<div class="container">
		<div class="row">
			<div class="col-xs-4">
				<div class='slide-left'>
					<div class="gradient-box top button-div" style="width:300px;height:150px;">
						<div style='opacity:1.0;'>
							<div id='where-to'>Where are you headed?
								<p class='tinier-text'>(doubleclick)</p>
							</div>

							<div id ='guess-div'>
								<%= form_tag url_for(action: 'score'), method: 'post', id: 'make_guess' do %>
									<%= text_field_tag :name %>
									<%= hidden_field_tag :score, 60 %>
									<%= submit_tag "guess" %>
								<% end %>
							</div>
							<p class='top-bar'>
								<%= form_for @clue, html: {id: 'reveal-clue'},method: 'post' do |f| %>
									<%= f.hidden_field :location_id, :value => @location.id %>
									<%= f.submit "Reveal Clue" %>
								<% end %>
							<p>
								<span class='game-score tiny-text'>Game score: <%= current_game.score %></span>
							</p>
							</p>
						</div>
					</div>
				</div>
				<div class='gradient-box bottom next-loc-div'>
					<%= form_for @location, url: url_for(controller: 'locations', action: 'create'), method: 'post', html: {id: 'next-location'} do |f| %>
						<input type='hidden' value='0' name='clues-used'>
						<%= f.submit "Where to next?" %>
					<% end %>
				</div>
		</div>
		<div class="col-xs-3">
			<div class="name middle" id="<%=@location.name%>">
			</div>
		</div>
		<div class='col-xs-5'>
			<ul class="clues top">
				<% if @clues %>
					<% @clues.each do |clue| %>
						<li class='gradient-box'><%= clue.datatype.lead_in %><%= clue.data %></li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>
</div>
