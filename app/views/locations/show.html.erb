							<%= text_field_tag :name %>
							<%= hidden_field_tag :score, 60 %>
					</div>
					<div id="cstm-guess-button">
							<%= submit_tag "GUESS" %>
						<% end %>
					</div>
				</div>	
				</div>
		</div>

		<div id="cstm-column-right">
			<%= form_for @clue, html: {id: 'reveal-clue'}, method: 'post' do |f| %>
				<%= f.hidden_field :location_id, :value => @location.id %>
			<div class="cstmRevealClueButtonDiv">
				<%= f.submit "Click to Reveal a Clue" %>
			</div>
				<% end %>

